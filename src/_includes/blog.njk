---
layout: page
title: blog.all_posts
---

{% import "post-info.njk" as postInfo %}

<h1>{{ title | i18n }}</h1>
{% set posts = collections.post | filterBy('data.lang', lang) | reverse %}
{% if posts.length %}
  {%- for post in posts -%}
    <section class="post-preview">
      <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      {{ postInfo.meta(post.date, post.templateContent, post.data.canonical) }}
      {% if post.data.description %}
        <p>{{ post.data.description | safe }}</p>
      {% endif %}
    </section>
  {%- endfor -%}
{% else %}
  <p>{{ 'blog.will_be_soon' | i18n }}</p>
{% endif %}
