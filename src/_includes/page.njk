---
layout: base
title: Blog. Sashaqred "Immortality project"
pageMap:
  '': 'menu.home'
  'blog/': 'menu.blog'
---

<div class="header">
  <div class="header-wrapper">
    <nav class="header-nav">
      <ul>
        {%- for link, title in pageMap %}
          {% set langLink = '/' + lang + '/' + link %}
          {% set blankLangLink = '/' + lang + '/' %}
          <li>
            <a
              href="{{ langLink }}"
              {% if langLink === blankLangLink and langLink === page.url or langLink !== blankLangLink and page.url.startsWith(langLink) %}
                aria-current="page"
              {% endif %}
            >
              {{ title | i18n }}
            </a>
          </li>
        {%- endfor %}
      </ul>
    </nav>

    <ul class="lang-switcher">
      {%- for currentLang in avaliableLangs %}
      {% set tag = 'span' if currentLang === lang else 'a' %}
      {% set href = ' href="' + currentLang | langLink(page.url, contentTranslatedTo) + '"' if tag === 'a' else '' %}
      <li>
        <{{tag}}{{href | safe}}> {{currentLang}} </{{tag}}></li>
      {%- endfor %}
    </ul>
  </div>
</div>

<main class="page">
  {{ content | safe }}
</main>
