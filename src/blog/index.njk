---
layout: page
title: All posts
---

<h1>{{ title }}</h1>

{%- for post in collections.post | reverse -%}
  <section>
    <span>
    <date datetime="{{ post.date }}">{{ post.date | date }}</date>
    â€¢
    <span>{{ post.templateContent | readingTime }}</span>
  </span>
    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    {% if post.data.description %}
      <p>{{ post.data.description | safe }}</p>
    {% endif %}
  </section>
{%- endfor -%}
