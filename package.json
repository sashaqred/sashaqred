{
  "name": "sashaqred",
  "description": "Personal blog by Sasha Verbilo",
  "scripts": {
    "prepare": "is-ci || husky install",
    "start": "gulp serve",
    "build": "gulp build",
    "predeploy": "rm -rd dist && npm run build",
    "deploy": "gh-pages -d dist",
    "format": "prettier --write .",
    "lint": "npm run lint:styles",
    "lint:styles": "npm run lint:styles:files -- \"**/*.css\"",
    "lint:styles:files": "stylelint",
    "format:check": "npm run format:check:files -- .",
    "format:check:files": "prettier --check"
  },
  "engines": {
    "node": "~16",
    "npm": "~8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sashaqred/sashaqred.git"
  },
  "author": "Sasha Verbilo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sashaqred/sashaqred/issues"
  },
  "homepage": "https://sashaqred.com",
  "private": true,
  "dependencies": {
    "@11ty/eleventy": "~0.12",
    "@11ty/eleventy-img": "~1.0",
    "@11ty/eleventy-plugin-rss": "~1.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "~3.1",
    "@fontsource/raleway": "~4.5",
    "date-fns": "~2.26",
    "eleventy-plugin-helmet": "~0.2",
    "eleventy-plugin-i18n": "~0.1",
    "eleventy-plugin-reading-time": "0.0.1",
    "eleventy-plugin-toc": "~1.1",
    "markdown-it": "~12.2",
    "markdown-it-anchor": "~8.4",
    "prism-themes": "~1.9"
  },
  "devDependencies": {
    "@commitlint/cli": "~15.0",
    "@commitlint/config-conventional": "~15.0",
    "autoprefixer": "~10.4",
    "gh-pages": "~3.2",
    "gulp": "~4.0",
    "gulp-clean": "~0.4",
    "gulp-postcss": "~9.0",
    "husky": "~7.0",
    "is-ci": "~3.0",
    "lint-staged": "~12.1",
    "postcss": "~8.4",
    "postcss-preset-env": "~7.0",
    "prettier": "~2.4",
    "stylelint": "~14.1",
    "stylelint-a11y": "~1.2",
    "stylelint-config-idiomatic-order": "~8.1",
    "stylelint-declaration-block-no-ignored-properties": "~2.5",
    "stylelint-high-performance-animation": "~1.6",
    "stylelint-no-browser-hacks": "~1.2",
    "stylelint-no-indistinguishable-colors": "~1.3",
    "stylelint-no-unsupported-browser-features": "~5.0",
    "stylelint-no-unused-selectors": "~1.0",
    "stylelint-prettier": "~2.0",
    "stylelint-selector-no-empty": "~1.0",
    "stylelint-value-no-unknown-custom-properties": "~3.0"
  }
}
