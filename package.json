{
  "name": "sashaqred",
  "description": "Personal blog by Sasha Verbilo",
  "scripts": {
    "prepare": "is-ci || husky install",
    "start": "rm -rdf dist && npx @11ty/eleventy --serve",
    "build": "rm -rdf dist && npx @11ty/eleventy",
    "deploy": "pnpm build && gh-pages -d dist",
    "format": "prettier --write .",
    "lint": "pnpm lint:styles",
    "lint:styles": "pnpm lint:styles:files -- \"**/*.css\"",
    "lint:styles:files": "stylelint",
    "format:check": "pnpm format:check:files -- .",
    "format:check:files": "prettier --check"
  },
  "engines": {
    "node": "~16",
    "pnpm": "~7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sashaqred/sashaqred.git"
  },
  "author": "Sasha Verbilo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sashaqred/sashaqred/issues"
  },
  "homepage": "https://sashaqred.com",
  "private": true,
  "dependencies": {
    "@11ty/eleventy": "2.0.0-canary.15",
    "@11ty/eleventy-img": "2.0.1",
    "@11ty/eleventy-plugin-rss": "1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "4.1.0",
    "@11ty/eleventy-plugin-vite": "2.0.0-canary.2",
    "@fontsource/raleway": "4.5.10",
    "@sindresorhus/slugify": "1.1.2",
    "@types/markdown-it": "12.2.3",
    "@types/node": "16.11.58",
    "autoprefixer": "10.4.10",
    "browserslist": "4.21.3",
    "caniuse-lite": "1.0.30001399",
    "date-fns": "2.29.3",
    "eleventy-favicon": "1.1.3",
    "eleventy-plugin-helmet": "0.2.2",
    "eleventy-plugin-i18n": "0.1.3",
    "eleventy-plugin-time-to-read": "1.2.0",
    "eleventy-plugin-toc": "1.1.5",
    "gh-pages": "4.0.0",
    "is-ci": "3.0.1",
    "markdown-it": "13.0.1",
    "markdown-it-anchor": "8.6.5",
    "postcss": "8.4.16",
    "prism-themes": "1.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "stylelint": "14.11.0",
    "stylelint-config-idiomatic-order": "8.1.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "28.0.0",
    "stylelint-declaration-block-no-ignored-properties": "2.5.0",
    "stylelint-high-performance-animation": "1.6.0",
    "stylelint-no-unsupported-browser-features": "5.0.4"
  }
}
