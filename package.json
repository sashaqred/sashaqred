{
  "name": "sashaqred",
  "description": "Personal blog by Sasha Verbilo",
  "type": "module",
  "scripts": {
    "prepare": "is-ci || husky",
    "start": "rm -rdf dist && npx @11ty/eleventy --serve",
    "build": "rm -rdf dist && npx @11ty/eleventy",
    "deploy": "pnpm build && gh-pages -d dist",
    "format": "prettier --write . --ignore-unknown",
    "lint": "pnpm lint:styles",
    "lint:styles": "pnpm lint:styles:files -- \"**/*.css\"",
    "lint:styles:files": "stylelint",
    "format:check": "pnpm format:check:files -- .",
    "format:check:files": "prettier --check --ignore-unknown"
  },
  "engines": {
    "node": "24.11.0",
    "pnpm": "10.20.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sashaqred/sashaqred.git"
  },
  "author": "Sasha Verbilo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sashaqred/sashaqred/issues"
  },
  "homepage": "https://sashaqred.com",
  "private": true,
  "dependencies": {
    "@11ty/eleventy": "~3.1",
    "@11ty/eleventy-img": "~6.0",
    "@11ty/eleventy-plugin-rss": "~2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "~5.0",
    "@fontsource-variable/raleway": "~5.2",
    "@fontsource/raleway": "~5.2",
    "@sindresorhus/slugify": "~3.0",
    "@types/markdown-it": "~14.1",
    "@types/node": "~24.10",
    "autoprefixer": "~10.4",
    "browserslist": "~4.28",
    "caniuse-lite": "~1.0",
    "date-fns": "~4.1",
    "eleventy-favicon": "~1.1",
    "eleventy-plugin-helmet": "~0.2",
    "eleventy-plugin-i18n": "~0.1",
    "eleventy-plugin-postcss": "~3.0",
    "eleventy-plugin-time-to-read": "~1.3",
    "eleventy-plugin-toc": "~1.1",
    "gh-pages": "~6.3",
    "is-ci": "~4.1",
    "markdown-it": "~14.1",
    "markdown-it-anchor": "~9.2",
    "postcss": "~8.5",
    "prism-themes": "~1.9",
    "vite": "~7.2",
    "vite-plugin-minify": "~2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "~20.2",
    "@commitlint/config-conventional": "~20.2",
    "husky": "~9.1",
    "lint-staged": "~16.2",
    "prettier": "~3.7",
    "stylelint": "~16.26",
    "stylelint-config-idiomatic-order": "~10.0",
    "stylelint-config-standard": "~39.0",
    "stylelint-declaration-block-no-ignored-properties": "~2.8",
    "stylelint-high-performance-animation": "~1.11",
    "stylelint-no-unsupported-browser-features": "~8.0"
  }
}
