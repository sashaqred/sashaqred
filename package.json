  "dependencies": {
    "@11ty/eleventy": "~0.11",
    "@11ty/eleventy-plugin-syntaxhighlight": "~3.0",
    "date-fns": "~2.16",
    "eleventy-plugin-helmet": "~0.2",
    "eleventy-plugin-reading-time": "0.0.1",
    "eleventy-plugin-toc": "~1.1",
    "markdown-it": "~12.0",
    "markdown-it-anchor": "~6.0",
    "prism-themes": "~1.5"
