{
  "name": "sashaqred",
  "description": "Personal blog by Sasha Verbilo",
  "scripts": {
    "prepare": "is-ci || husky install",
    "start": "gulp serve",
    "build": "gulp build",
    "deploy": "rm -rdf dist && pnpm build && gh-pages -d dist",
    "format": "prettier --write .",
    "lint": "pnpm lint:styles",
    "lint:styles": "pnpm lint:styles:files -- \"**/*.css\"",
    "lint:styles:files": "stylelint",
    "format:check": "pnpm format:check:files -- .",
    "format:check:files": "prettier --check"
  },
  "engines": {
    "node": "~16",
    "pnpm": "~6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sashaqred/sashaqred.git"
  },
  "author": "Sasha Verbilo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sashaqred/sashaqred/issues"
  },
  "homepage": "https://sashaqred.com",
  "private": true,
  "dependencies": {
    "@11ty/eleventy": "2.0.0-canary.4",
    "@11ty/eleventy-img": "~2.0",
    "@11ty/eleventy-plugin-rss": "~1.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "~4.0",
    "@fontsource/raleway": "~4.5",
    "@sindresorhus/slugify": "~1.1",
    "@types/markdown-it": "~12.2",
    "@types/node": "~16.11",
    "date-fns": "~2.28",
    "eleventy-favicon": "~1.1",
    "eleventy-plugin-helmet": "~0.2",
    "eleventy-plugin-i18n": "~0.1",
    "eleventy-plugin-time-to-read": "~1.2",
    "eleventy-plugin-toc": "~1.1",
    "markdown-it": "~12.3",
    "markdown-it-anchor": "~8.4",
    "prism-themes": "~1.9"
  },
  "devDependencies": {
    "@commitlint/cli": "~16.2",
    "@commitlint/config-conventional": "~16.2",
    "autoprefixer": "~10.4",
    "gh-pages": "~3.2",
    "gulp": "~4.0",
    "gulp-clean": "~0.4",
    "gulp-postcss": "~9.0",
    "husky": "~7.0",
    "is-ci": "~3.0",
    "lint-staged": "~12.3",
    "postcss": "~8.4",
    "postcss-preset-env": "~7.4",
    "prettier": "~2.6",
    "stylelint": "~14.6",
    "stylelint-config-idiomatic-order": "~8.1",
    "stylelint-config-prettier": "~9.0",
    "stylelint-config-standard": "~25.0",
    "stylelint-declaration-block-no-ignored-properties": "~2.5",
    "stylelint-high-performance-animation": "~1.6",
    "stylelint-no-unsupported-browser-features": "~5.0"
  }
}
